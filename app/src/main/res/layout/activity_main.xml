<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toTopOf="@id/dice4"
               android:id="@+id/dice1"
               android:src="@drawable/feritroll1"
               android:adjustViewBounds="true"
               android:maxWidth="60dp"
               android:layout_gravity="center"
               android:maxHeight="60dp"
               android:scaleType="fitCenter"
               android:layout_margin="30sp"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toEndOf="@id/dice1"
               app:layout_constraintEnd_toStartOf="@id/dice3"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toTopOf="@id/dice5"
               android:id="@+id/dice2"
               android:src="@drawable/feritroll2"
               android:adjustViewBounds="true"
               android:maxWidth="60dp"
               android:layout_gravity="center"
               android:maxHeight="60dp"
               android:scaleType="fitCenter"
               android:layout_margin="30sp"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toEndOf="@id/dice2"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toTopOf="@id/dice6"
               android:id="@+id/dice3"
               android:src="@drawable/feritroll3"
               android:adjustViewBounds="true"
               android:maxWidth="60dp"
               android:layout_gravity="center"
               android:maxHeight="60dp"
               android:scaleType="fitCenter"
               android:layout_margin="30sp"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintEnd_toStartOf="@id/dice5"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/dice1"
               android:id="@+id/dice4"
               android:src="@drawable/feritroll4"
               android:adjustViewBounds="true"
               android:maxWidth="60dp"
               android:layout_gravity="center"
               android:maxHeight="60dp"
               android:scaleType="fitCenter"
               android:layout_margin="30sp"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toEndOf="@id/dice4"
               app:layout_constraintEnd_toStartOf="@id/dice6"
               app:layout_constraintTop_toBottomOf="@id/dice2"
               android:id="@+id/dice5"
               android:src="@drawable/feritroll5"
               android:adjustViewBounds="true"
               android:maxWidth="60dp"
               android:layout_gravity="center"
               android:maxHeight="60dp"
               android:scaleType="fitCenter"
               android:layout_margin="30sp"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toEndOf="@id/dice5"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@id/dice3"
               android:id="@+id/dice6"
               android:src="@drawable/feritroll6"
               android:adjustViewBounds="true"
               android:maxWidth="60dp"
               android:layout_gravity="center"
               android:maxHeight="60dp"
               android:scaleType="fitCenter"
               android:layout_margin="30sp" />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dice5"
    android:id="@+id/diceRoll"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/rollsLeft"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toBottomOf="@id/diceRoll"
              android:text="Rolls left: "
              android:id="@+id/leftRolls"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@id/leftRolls"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toBottomOf="@id/diceRoll"
              android:text="2"
              android:id="@+id/rollsLeft"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rollsLeft"
            android:id="@+id/resetRolls"/>

</android.support.constraint.ConstraintLayout>
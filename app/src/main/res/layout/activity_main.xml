<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.base.BaseActivity">


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/dice1"
               android:src="@drawable/feritroll1"
               android:adjustViewBounds="true"
               android:maxWidth="100dp"
               android:layout_gravity="center"
               android:maxHeight="100dp"
               android:scaleType="fitCenter"
               android:layout_margin="30sp" android:contentDescription="TODO" android:layout_marginStart="8dp"
               app:layout_constraintStart_toStartOf="parent"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toEndOf="@id/dice1"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/dice2"
               android:src="@drawable/feritroll2"
               android:adjustViewBounds="true"
               android:maxWidth="100dp"
               android:layout_gravity="center"
               android:maxHeight="100dp"
               android:scaleType="fitCenter"
               android:layout_margin="30sp" android:contentDescription="TODO" android:layout_marginEnd="8dp"
               app:layout_constraintEnd_toStartOf="@+id/dice3"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/dice3"
               android:src="@drawable/feritroll3"
               android:adjustViewBounds="true"
               android:maxWidth="100dp"
               android:layout_gravity="center"
               android:maxHeight="100dp"
               android:scaleType="fitCenter"
               android:layout_margin="30sp" android:contentDescription="TODO" android:layout_marginEnd="8dp"
               app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/dice4"
               android:src="@drawable/feritroll4"
               android:adjustViewBounds="true"
               android:maxWidth="100dp"
               android:maxHeight="100dp"
               android:scaleType="fitCenter"
               android:layout_margin="30sp" android:layout_marginStart="8dp"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
               app:layout_constraintTop_toBottomOf="@+id/dice1"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toEndOf="@id/dice4"
               app:layout_constraintEnd_toStartOf="@id/dice6"
               android:id="@+id/dice5"
               android:src="@drawable/feritroll5"
               android:adjustViewBounds="true"
               android:maxWidth="100dp"
               android:layout_gravity="center"
               android:maxHeight="100dp"
               android:scaleType="fitCenter"
               android:layout_margin="30sp" android:layout_marginTop="8dp"
               app:layout_constraintTop_toBottomOf="@+id/dice2"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/dice6"
               android:src="@drawable/feritroll6"
               android:adjustViewBounds="true"
               android:maxWidth="100dp"
               android:layout_gravity="center"
               android:maxHeight="100dp"
               android:scaleType="fitCenter"
               android:layout_margin="30sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/dice3"/>
    <Button android:layout_width="250dp"
            android:layout_height="100dp"
            android:text="Roll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dice5"
            android:id="@+id/diceRoll"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/rollsLeft"
              android:text="Rolls left: "
              android:id="@+id/leftRolls"
              app:layout_constraintTop_toBottomOf="@+id/diceRoll" android:layout_marginTop="16dp"
              android:textStyle="bold" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toTopOf="@+id/resetRolls"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toEndOf="@id/leftRolls"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/diceRoll"
              android:text="2"
              android:id="@+id/rollsLeft" android:layout_marginTop="16dp" android:textStyle="bold"
              android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/resetRolls"/>
    <Button android:layout_width="250dp"
            android:layout_height="100dp"
            android:text="Reset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/resetRolls" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/diceRoll"/>

</android.support.constraint.ConstraintLayout>